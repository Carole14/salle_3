{% extends 'base.html.twig' %}

{% block title %}Structures{% endblock %}

{% block body %}
    <h1>Structures</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ structure.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ structure.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ structure.email }}</td>
            </tr>
            <tr>
                <th>Mot_de_passe</th>
                <td>{{ structure.motDePasse }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_structures_index') }}">Retourner à la liste</a>

    <a href="{{ path('app_structures_edit', {'id': structure.id}) }}">Mettre à jour</a>

    {{ include('structures/_delete_form.html.twig') }}
{% endblock %}
