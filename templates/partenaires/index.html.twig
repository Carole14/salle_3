{% extends 'base.html.twig' %}

{% block title %}Liste des partenaires{% endblock %}

{% block body %}

{% include 'navigation.html.twig' %}

    <h1>Liste des partenaires</h1>

      {{ form_start(form)}}
    	<div class="sidebar__item">
		{{ form_row(form.q, {"attr": {"class": "form-control pl-30", "id": "site-search"}}) }}
	</div>
    {{ form_end(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Active</th>
                <th>Email</th>
                <th>Mot_de_passe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partenaire in partenaires %}
            <tr>
                <td>{{ partenaire.id }}</td>
                <td>{{ partenaire.nom }}</td>
                <td>{{ partenaire.active ? 'Yes' : 'No' }}</td>
                <td>{{ partenaire.email }}</td>
                <td>{{ partenaire.motDePasse }}</td>
                <td>
                    <a href="{{ path('app_partenaires_show', {'id': partenaire.id}) }}">Montrer</a>
                    <a href="{{ path('app_partenaires_edit', {'id': partenaire.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas de partenaires trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_partenaires_new') }}">Créer un nouveau partenaire</a>
{% endblock %}
