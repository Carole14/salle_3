{% extends 'base.html.twig' %}

{% block title %}page de profil{% endblock %}

{% block body %}

{% include 'navigation.html.twig' %}

    <h1 class = "profil">Page de profil</h1>
     <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ app.user.getPartner().getNom() }}</td>
            </tr>
              <tr>
                <th>Active</th>
                <td>{{ app.user.getPartner().isActive() ? 'Oui' : 'Non' }}</td>
            </tr>
             <tr>
             <th>Permissions</th>
           {% for partPerm in app.user.getPartner().getPermission() %}
                <td>{{ partPerm.getNom2()}}</td>
              {% endfor %}
  </tr>
    
            
        </tbody>
    </table>

{% endblock %}
